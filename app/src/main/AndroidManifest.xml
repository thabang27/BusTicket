<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thabang.BusTicket">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoginAndSignUp">
        <activity
            android:name="com.thabang.busticket.SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thabang.busticket.SignUpActivity"
            android:exported="false" >
        </activity>
        <activity
            android:name="com.thabang.busticket.AvailableTicketActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.thabang.busticket.MainMenuActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.thabang.busticket.SelectTicketActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.thabang.busticket.MapViewActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.thabang.busticket.PaymentMethodActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.thabang.busticket.PayWithCardActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.thabang.busticket.PurchaseTripsActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.thabang.busticket.EftActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.thabang.busticket.TicketActivity"
            android:exported="true">
        </activity>

        <activity
            android:name="com.thabang.busticket.BuyTicketActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>